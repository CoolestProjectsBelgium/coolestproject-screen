<html>
  <head>
    <style>
        body { margin: 0; }

        @keyframes fadeIn {
            0% {opacity:0;}
            100% {opacity:1;}
        }
        @keyframes fadeOut {
            0% {opacity:1;}
            100% {opacity:0;}
        }

        .fadeIn {
            animation: fadeIn 1s;
            opacity:1;
            
        }
        
        .fadeOut {
            animation: fadeOut 1s;
            opacity:0;
        }

        .slide {
            position: absolute;
            top:0;
            left:0;
        }

    </style>
  </head>
  <body>
    {{{body}}}
  </body>
</html>